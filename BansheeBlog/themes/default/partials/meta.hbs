{{#if Settings.GoogleAnalyticsTrackingId}}
<script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', '{{Settings.GoogleAnalyticsTrackingId}}', 'auto');
    ga('send', 'pageview');
</script>
{{/if}}

<link rel="canonical" href="{{Settings.BlogUrl}}" />
<meta name="referrer" content="origin" />

{{#if Article}}
<meta name="keywords" content="{{Article.Tags}}">
<meta property="description" content="{{Settings.BlogDescription}}" />
{{else}}
<meta property="description" content="{{Settings.BlogDescription}}" />
{{/if}}

<meta property="description" content="{{PageDescription}}" />

<meta property="og:site_name" content="{{Settings.BlogTitle}}" />
<meta property="og:type" content="website" />
<meta property="og:title" content="{{Settings.BlogTitle}}" />
<meta property="og:description" content="{{Settings.BlogDescription}}" />
<meta property="og:url" content="{{Settings.BlogUrl}}" />

<meta name="twitter:card" content="summary" />
<meta name="twitter:title" content="{{Settings.BlogTitle}}" />
<meta name="twitter:description" content="{{Settings.BlogDescription}}" />
<meta name="twitter:url" content="{{Settings.BlogUrl}}" />

<meta name="generator" content="Banshee Blog" />

<script type="application/ld+json">
{
    "@context": "http://schema.org",
    "@type": "Website",
    "publisher": "{{Settings.Author}}",
    "url": "{{Settings.BlogUrl}}",
    "description": "{{Settings.BlogDescription}}"
}
</script>
